
<h1>Listing Temperatures</h1>

<%= link_to 'New reading', new_temperature_path %>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
 
  <% @temperatures.each do |temperature| %>
    <tr>
      <td><%= temperature.title %></td>
      <td><%= temperature.text %></td>
      <td><%= link_to 'Show', temperature_path(temperature) %></td>
      <td><%= link_to 'Edit', edit_temperature_path(temperature) %></td>
      <td><%= link_to 'Destroy', temperature_path(temperature),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  <%= link_to 'Back', temperatures_path %>
  
</table>